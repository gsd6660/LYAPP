# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'LYAPP' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for LYAPP
	pod 'Alamofire' # 网络请求
  pod 'SwiftyJSON' #解析JSON
  pod 'Hue'  # 颜色库
  pod 'Kingfisher' #加载图片
  pod 'HandyJSON'
  pod 'SwiftyUserDefaults'
  pod 'NVActivityIndicatorView' # 指示器
  pod 'IQKeyboardManagerSwift'  # 键盘管理
  pod 'FSPagerView'        #第三方图片轮播库
  pod 'SnapKit'
end
